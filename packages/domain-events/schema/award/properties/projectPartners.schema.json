{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://funding-service.ukri.org/schema/award/event/properties/projectPartners.schema.json",
    "title": "Project Partners",
    "description": "The project partners associated with the award",
    "type": "array",
    "items": {
        "required": [
            "organisationName",
            "nameOfContact",
            "directContributionPence",
            "inKindContributionPence",
            "country"
        ],
        "type": "object",
        "properties": {
            "organisationName": {
                "description": "The name of the organisation",
                "type": "string"
            },
            "nameOfContact": {
                "description": "The name of the contact",
                "type": "string"
            },
            "directContributionPence": {
                "description": "The direct contribution of the organisation in pence",
                "type": "number"
            },
            "inKindContributionPence": {
                "description": "The in kind contribution of the organisation in pence",
                "type": "number"
            },
            "country": {
                "description": "The name of the country",
                "type": "string"
            }
        }
    }
}
