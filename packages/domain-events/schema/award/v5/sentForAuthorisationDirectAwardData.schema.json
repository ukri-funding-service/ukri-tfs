{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://funding-service.ukri.org/schema/award/event/v5/sentForAuthorisationDirectAwardData.schema.json",
    "title": "Sent for Authorization Data Direct Award",
