        "tfsFundingType": {
            "$ref": "../properties/tfsFundingType.schema.json"
        },
        "gfsFundingType": {
            "$ref": "../properties/gfsFundingType.schema.json"
        },
        "costCategoryType": {
            "$ref": "../properties/costCategoryType.schema.json"
        },
        "fundHeadings": {
            "$ref": "../properties/fundHeadings.schema.json"
        },
        "indexation": {
            "$ref": "../properties/indexation.schema.json"
        },
        "summary": {
            "$ref": "../properties/summary.schema.json"
        }
    }
}
