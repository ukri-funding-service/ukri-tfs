        "gfsAwardReference",
        "awardStatus",
        "statusUpdatedAt",
        "statusUpdatedBy",
        "publishToGatewayToResearch",
        "awardName",
        "researchOrganisationId",
        "totalAwardValue",
        "fundingTotals",
        "projectPartners",
        "teamMembers",
        "earliestStartDate",
        "latestStartDate",
        "duration",
        "awardSource",
        "tfsFundingType",
        "gfsFundingType",
        "costCategoryType",
        "fundHeadings",
        "indexation",
        "summary"
    ],
    "additionalProperties": false,
    "properties": {
        "tfsAwardReference": {
            "$ref": "../properties/tfsAwardReference.schema.json"
        },
        "gfsAwardReference": {
            "$ref": "../properties/gfsAwardReference.schema.json"
        },
        "awardStatus": {
            "$ref": "../properties/awardStatus.schema.json"
        },
        "statusUpdatedAt": {
            "$ref": "../properties/statusUpdatedAt.schema.json"
        },
        "statusUpdatedBy": {
            "$ref": "../properties/statusUpdatedBy.schema.json"
        },
        "publishToGatewayToResearch": {
            "$ref": "../properties/publishToGatewayToResearch.schema.json"
        },
        "awardSource": {
            "$ref": "../properties/awardSource.schema.json"
        },
        "awardName": {
            "$ref": "../properties/awardName.schema.json"
        },
        "researchOrganisationId": {
            "$ref": "../properties/researchOrganisationId.schema.json"
        },
        "totalAwardValue": {
            "$ref": "../properties/totalAwardValue.schema.json"
        },
        "fundingTotals": {
            "$ref": "../properties/fundingTotals.schema.json"
        },
        "projectPartners": {
            "anyOf": [
                { "$ref": "../properties/projectPartners.schema.json" },
                { "$ref": "../properties/projectPartnersWithReference.schema.json" }
            ]
        },
        "teamMembers": {
            "$ref": "../properties/teamMembers.schema.json"
        },
        "earliestStartDate": {
            "$ref": "../properties/earliestStartDate.schema.json"
        },
        "latestStartDate": {
            "$ref": "../properties/latestStartDate.schema.json"
