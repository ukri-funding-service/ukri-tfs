{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://funding-service.ukri.org/schema/am/event/v2/contribution.schema.json",
    "title": "Contribution",
    "description": "The contribution value and description",
    "type": "object",
    "properties": {
        "value": { "description": "The contribution value", "type": "number", "examples": [2000] },
        "summary": {
            "description": "The description of a contribution",
            "type": "string",
            "examples": ["Science"]
        }
    },
    "required": ["value", "summary"]
}
