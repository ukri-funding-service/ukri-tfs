{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://funding-service.ukri.org/schema/notification/event/v1/common/recipientByPersonId.schema.json",
    "title": "Notification recipient by person id",
    "description": "The user personId will be used to get the notification address",
    "type": "object",
    "required": ["personId", "type"],
    "properties": {
        "personId": {
            "description": "The person-id of the recipient",
            "type": "string"
        },
        "type": {
            "description": "type identifier",
            "type": "string",
            "enum": ["RecipientByPersonId"]
        }
    }
}
